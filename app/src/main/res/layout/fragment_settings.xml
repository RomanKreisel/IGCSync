<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:stretchColumns="1">

        <TableRow>

            <TextView
                android:layout_span="2"
                android:text="@string/headline_general"
                android:textStyle="bold" />
        </TableRow>


        <TableRow>

            <TextView
                android:id="@+id/label_igc_data_directory"
                android:labelFor="@id/button_select_data_directory"
                android:text="@string/label_data_directory" />

            <Button
                android:id="@+id/button_select_data_directory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="150sp"
                android:singleLine="true"
                android:text="@string/button_select_data_directory"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="15sp" />
        </TableRow>

        <TableRow>

            <TextView
                android:labelFor="@+id/text_minimim_flight_duration_seconds"
                android:maxWidth="0dp"
                android:paddingBottom="10dp"
                android:text="@string/label_ignore_flights_below_seconds" />

            <EditText
                android:id="@+id/text_minimim_flight_duration_seconds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15sp"
                android:autofillHints=""
                android:ems="10"
                android:inputType="number"
                android:paddingTop="0sp"
                android:text="@string/default_minimum_flight_duration_seconds" />
        </TableRow>

        <TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_span="2"
                android:background="?android:attr/listDivider" />
        </TableRow>


        <TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_span="2"
                android:background="?android:attr/listDivider" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_span="2"
                android:text="@string/headline_dhv_xc"
                android:textStyle="bold" />
        </TableRow>

        <TableRow>

            <TextView android:text="@string/label_username" />

            <EditText
                android:id="@+id/edit_text_username"
                android:autofillHints="username"
                android:hint="@string/hint_username_john_doe"
                android:inputType="text" />
        </TableRow>

        <TableRow>

            <TextView android:text="@string/label_password" />

            <EditText
                android:id="@+id/edit_text_password"
                android:autofillHints="password"
                android:hint="@string/hint_password"
                android:inputType="textPassword" />
        </TableRow>

        <TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_span="2"
                android:background="?android:attr/listDivider" />
        </TableRow>


        <TableRow>

            <TextView android:text="@string/label_offer_upload_to_tandem_cup" />

            <CheckBox
                android:id="@+id/checkbox_offer_upload_to_tandem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </TableRow>


    </TableLayout>
</ScrollView>
